<!DOCTYPE html>
<html>
  <head>
    <%= render partial: 'google_analytics' if CONFIG[:google_analytics] %>
    <title><%= [@finding_aid_title, @repository_name, 'Columbia University Libraries Finding Aids'].reject(&:blank?).join(' | ') %></title>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link rel="stylesheet" type="text/css" href="https://toolkit.library.columbia.edu/v3/css/cul-toolkit.css">
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render Acfa::HeaderComponent.new(blacklight_config: controller.blacklight_config) unless @print_view %>
    <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>
