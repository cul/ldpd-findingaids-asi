<div class="nnc-a">
  <h1>Avery</h1>
  <table style="width:100%">
    <% @flattened_component_structure.each do |component| %>
      <% ( nesting_level,
           title,
           date,
           level,
           scope_content_ps,
           separated_material_ps,
           other_finding_aid_ps,
           container_info ) = component
      %>
      <tr style="border-top:1px solid #eee">
        <td style="width:20%"><%= container_info.join(' ') %></td>
        <td style="width:60%;font-weight:bold"> <%= title %> </td>
        <td style="width:20%"><%= date %></td>
      </tr>
      <% unless scope_content_ps.empty? %>
        <tr>
          <td style="width:20%"></td>
          <td style="width:60%">
	    <% scope_content_ps.each do |scope_content_p| %>
	    <%== scope_content_p %>
	    <% end %>
	  </td>
          <td style="width:20%"></td>
        </tr>
      <% end %>
      <% unless separated_material_ps.empty? %>
        <tr>
          <td style="width:20%"></td>
          <td style="width:60%">
	    <% separated_material_ps.each do |separated_material_p| %>
	      <%== separated_material_p %>
	    <% end %>
	  </td>
          <td style="width:20%"></td>
        </tr>
      <% end %>
      <% unless other_finding_aid_ps.empty? %>
        <tr>
          <td style="width:20%"></td>
          <td style="width:60%">
	    <% other_finding_aid_ps.each do |other_finding_aid_p| %>
	      <%== other_finding_aid_p %>
	    <% end %>
	  </td>
          <td style="width:20%"></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>    
