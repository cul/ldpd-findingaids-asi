  <h1>Avery, take 2</h1>
  <table style="width:100%">
    <% @flattened_component_structure.each do |component| %>
      <% nesting_level, title, date, level, scope_content, container_info = component %>
      <tr style="border-top:1px solid #eee">
        <td style="width:20%"><%= container_info.join(' ') %></td>
        <td style="width:60%;font-weight:bold"> <%= title %> </td>
        <td style="width:20%"><%= date %></td>
      </tr>
      <% unless scope_content.blank? %>
        <tr>
          <td style="width:20%"></td>
          <td style="width:60%"><%= scope_content %></td>
          <td style="width:20%"></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>    
