<% repo_suffix = params[:repository_id].gsub('-','_') %>
<% @flattened_component_structure_array.each_with_index do |structure, index| %>
  <% @flattened_component_structure = structure %>
  <!-- component_id needed for the creation of checkboxes for repos using aeon -->
  <%= render partial: "component_structure_view_#{REPOS[params[:repository_id]][:view_style]}",
             locals: {component_title: @series_titles[index],
                      component_id: index+1,
                      notes: @notes_array[index],
                      daos_description_href: @daos_description_href_array[index]}
  %>
<% end %>
