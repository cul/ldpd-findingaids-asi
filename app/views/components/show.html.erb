<%- breadcrumb(:ead_component, @repository, params[:finding_aid_id], @finding_aid_title, params[:id], @series.unit_title.text) %>
<div class="container">
<div class="row">
  <%= render Acfa::SidebarComponent.new(arch_desc_dsc: @arch_desc_dsc, arch_desc_misc: @arch_desc_misc, preview_flag: @preview_flag, restricted_access: @restricted_access_flag, finding_aid_id: params[:finding_aid_id]) %>
  <div class="col ead_content">
    <%- layout_component = @repository.aeon_enabled? ? Acfa::AeonWrapperComponent : Acfa::SeriesCollectionComponent %>
    <%= render layout_component.new(repository: @repository) do |wrapper| %>
      <%- wrapper.with_series_resource(parser: @series, series: @series.series, repository: @repository, aeon_enabled: @repository.aeon_enabled?, component_id: params[:id]) %>
    <%- end %>
  </div>
</div>
</div>
