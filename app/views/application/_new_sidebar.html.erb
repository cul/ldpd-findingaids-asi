    <%= render partial: 'container_list',
               locals: { slug: repository_finding_aid_path,
                         series_titles_urls: series_titles_urls,
                         subseries_titles: @arch_desc_dsc.subseries_compound_title_array_for_each_series_array }
    %>
  <% end %>
