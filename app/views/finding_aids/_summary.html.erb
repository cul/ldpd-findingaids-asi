<h3>EAD Abstract</h3>
<p><%= @abstract %></p>
<h3>At a Glance</h3>
<table class="summaryTable">
  <tbody>
    <tr class="odd">
      <th>Bib ID (HC)</th>
      <td>
	<%= @bib_id %>
	<% bib_href = "http://www.columbia.edu/cgi-bin/cul/cliosearch?BIBID=#{@bib_id}" %>
	<a href= <%= bib_href %>
	   target="_blank"
	   class="smaller">
	  View CLIO record
	</a>

      </td>
    </tr>
    <tr class="odd">
      <th>Creator(s) (HC)</th>
      <td> <%= @creators.map(&:text).join('; ') %></td>
    </tr>
    <tr class="odd">
      <th>Physical Description (HC)</th>
      <td> <%= @physical_description %></td>
    </tr>
    <tr class="odd">
      <th>Language (HC)</th>
      <td> <%= @language %></td>
    </tr>
    <tr class="odd">
      <th>Access (HC)</th>
      <td> <%=  @access_restrictions_value %></td>
    </tr>
  </tbody>
</table>
