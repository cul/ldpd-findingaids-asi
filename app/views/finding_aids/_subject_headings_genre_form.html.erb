<h3 class="al-show-sub-heading">Genre/Form</h3>
<table class="subjectTable" style="width:fit-content;">
  <tbody>
    <tr>
      <th class="firstCell" style="vertical-align:middle;">Heading</th>
      <% unless @print_view %>
      <th class="firstCell" style="vertical-align:middle;">"CUL Collections:"<br>"CLIO"</th>
      <th class="firstCell" style="vertical-align:middle;">"Nat'l / Int'l Archives:"<br>"ArchivedGRID"</th>
      <% end %>
    </tr>
    <% @genres_forms.each do |genre_form| %>
    <tr>
      <td class="firstCell"><%= link_to genre_form, search_catalog_path(f:{subject: [genre_form]}), target: '_blank' %></td>
      <% unless @print_view %>
      <td>
	<a target="_blank"
	  href="<%= "https://clio.columbia.edu/catalog?q=\"#{genre_form}\"&search_field=subject" %>">
	  CLIO
	</a>
      </td>
      <td>
	<a target="_blank"
	  href="<%= "https://researchworks.oclc.org/archivegrid/?q=#{genre_form}" %>">
	  ArchiveGRID
	</a>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
