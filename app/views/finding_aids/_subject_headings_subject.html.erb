<h3 class="al-show-sub-heading">Subject</h3>
<table class="subjectTable" style="width:fit-content;">
  <tbody>
    <tr>
      <th class="firstCell" style="vertical-align:middle;">Heading</th>
      <% unless @print_view %>
      <th class="firstCell" style="vertical-align:middle;">"CUL Collections:"<br>"CLIO"</th>
      <th class="firstCell" style="vertical-align:middle;">"Nat'l / Int'l Archives:"<br>"ArchivedGRID"</th>
      <% end %>
    </tr>
    <% @subjects.each do |subject| %>
    <tr>
      <td class="firstCell"><%= link_to subject, search_catalog_path(f:{subject: [subject]}), target: '_blank' %></td>
      <% unless @print_view %>
      <td>
	<a target="_blank"
	  href="<%= "https://clio.columbia.edu/catalog?q=\"#{subject}\"&search_field=subject" %>">
	  CLIO
	</a>
      </td>
      <td>
	<a target="_blank"
	  href="<%= "https://researchworks.oclc.org/archivegrid/?q=#{subject}" %>">
	  ArchiveGRID
	</a>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
