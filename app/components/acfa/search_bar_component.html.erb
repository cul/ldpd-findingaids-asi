<%= render(Blacklight::SearchBarComponent.new(
      q: @q,
      **@kwargs,
      params: params_for_search)) do |c| %>

  <% c.with_prepend do %>
    <%= prepend %>
  <% end %>

  <% c.with_append do %>
    <%= append %>
  <% end if append? %>

  <% c.with_search_button do %>
    <%= search_button %>
  <% end if respond_to?(:search_button?) && search_button? # only BL8 has this option %>
<% end %>
